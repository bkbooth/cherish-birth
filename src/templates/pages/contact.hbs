{{#> layout}}
  {{#*inline "content"}}
    <p>
      Please fill in and send the following form and I will get back to you as soon
      as possible.
    </p>

    <form
      id="contact"
      {{#if isProduction}}
        action="https://formspree.io/hello@cherishbirth.com.au"
      {{else}}
        action="https://formspree.io/support@cherishbirth.com.au"
      {{/if}}
      method="post"
      target="_blank"
      novalidate
    >
      <div class="input-group">
        <input type="text" id="name" name="name" autofocus required>
        <label for="name">Your name</label>
        <span class="input-error-message">
      <i class="fa fa-hand-pointer-o"></i>
      Whoops! You forgot this
    </span>
      </div>

      <div class="input-group">
        <input type="email" id="email" name="email" required>
        <label for="email">Email address</label>
        <span class="input-error-message">
          <i class="fa fa-hand-pointer-o"></i>
          I need this so I can contact you...
          or that one
          <i class="fa fa-hand-pointer-o fa-rotate-180"></i>
        </span>
      </div>

      <div class="input-group">
        <input type="text" id="phoneNumber" name="phoneNumber">
        <label for="phoneNumber">Phone number</label>
      </div>

      <div class="input-group">
        <textarea id="message" name="message" required></textarea>
        <label for="message">Your message</label>
        <span class="input-error-message">
          <i class="fa fa-hand-pointer-o"></i>
          Whoops! You forgot this
        </span>
      </div>

      <p>
        {{#if isProduction}}
          <input type="hidden" name="_cc" value="support@cherishbirth.com.au">
        {{/if}}
        <input type="hidden" name="_subject" value="Hello via Cherish Birth contact form">
        <input type="text" name="_gotcha">
        <button type="submit" class="btn btn-block" id="submit">
          <i class="not-sending fa fa-fw fa-paper-plane-o"></i>
          <i class="is-sending fa fa-fw fa-spinner fa-pulse"></i>
          Send it
        </button>
      </p>

      <p class="form-submitted-message">
        <span class="is-submitted">
          <i class="fa fa-fw fa-thumbs-o-up"></i>
          Sent! Thanks for contacting me, I'll get back to you as soon as possible!
        </span>
        <span class="failed-submitting">
          <i class="fa fa-fw fa-thumbs-o-down"></i>
          Oh no! Something went wrong. You can try submitting the form again or
          email me directly at
          <a href="mailto:hello@cherishbirth.com.au?cc=support@cherishbirth.com.au
              &amp;subject=Hello
              &amp;body=%0D%0A%0D%0AP.S.%20Something%20went%20wrong%20with%20your%20contact%20form"
          >
            hello@cherishbirth.com.au
          </a>
        </span>
      </p>
    </form>
  {{/inline}}
{{/layout}}
